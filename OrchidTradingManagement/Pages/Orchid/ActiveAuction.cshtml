@page
@model OrchidTradingManagement.Pages.Orchid.ActiveAuctionModel
@{
}

<div>
    <div>
        <h1>Active Auctions Listings</h1>
    </div>
</div>

@foreach (var listing in Model.ListInformations)
{
<div class="container" style="background-color: rgba(138, 129, 133, 0.6); margin-top:50px; margin-bottom: 50px; padding: 20px; border-radius:10px;">
    <div class="row">
        <div class="col col-xs-6 col-lg-5">
                <img src="@listing.Image" style="max-width: 400px; max-height: 400px;" />
        </div>
        <div class="col col-xs-6 col-lg-7">
                <h5><a href="/Orchid/DetailSellInformation/?ID=@listing.InforId" style="color: black;">@listing.Title</a></h5>
            <div>@listing.Description</div>
@*            <div>Bid: $@listing.Auction("N2")</div>
*@            <div>Listed by: @listing.UserId</div>
        </div>
    </div>
</div>
}

<div>
    <table class="table">
        <thead>
            <tr>
                <td>Title</td>
                <td>Description</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var listInformation in Model.ListInformations)
            {
                <tr>
                    <td>@listInformation.Title</td>
                    <td>@listInformation.Description</td>
                    
                    <td><a href="/Orchid/DetailSellInformation/?ID=@listInformation.InforId">View</a></td>
                </tr>
            }
        </tbody>
        </tab>
</div>