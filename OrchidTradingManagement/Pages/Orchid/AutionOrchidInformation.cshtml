@page
@model OrchidTradingManagement.Pages.Orchid.AutionOrchidInformationModel
@{
}

@{
    String jsonString = HttpContext.Session.GetString("userId");

    if (!string.IsNullOrEmpty(jsonString))
    {
        if (!jsonString.Equals("e7c115d3-a70a-4a16-b891-c45bd0425a00"))
        {
            <div class="bg-secondary bg-opacity-10 py-2">
                <div>
                    <h1>Auction Orchid Information</h1>
                </div>
            </div>

            var id = HttpContext.Session.GetString("userId");

            @if (Model.AuctionInfors != null && Model.AuctionInfors.Any())
            {
                @foreach (var orchidlist in Model.AuctionInfors)
                {
                    <div>
                        <div class="container" id="body">
                            <div>
                                @if (!string.IsNullOrEmpty(id))
                                {
                                    if (id.Equals(orchidlist.UserId.ToString()))
                                    {
                                        <h5>Your List Information</h5>
                                    }
                                }
                            </div>

                            <form method="post">
                                <div class="mb-3" style="display:none">
                                    <label for="id" class="form-label">InforId</label>
                                    <input type="text" class="form-control" id="userId" asp-for="@orchidlist.InforId" />
                                </div>

                                <div class="mb-3">
                                    <label for="title" class="form-label">Title: </label>
                                    @orchidlist.Title
                                </div>
                                <div class="mb-3">
                                    <label for="description" class="form-label">Description: </label>
                                    @orchidlist.Description
                                </div>

                                <div class="mb-3">
                                    <label for="image" class="form-label">Image: </label>
                                    <img src="@orchidlist.Image" style="width:300px; height:300px" />
                                </div>
                                <div class="mb-3" style="display:none">
                                    <label for="createdDate" class="form-label">CreatedDate</label>
                                    @orchidlist.CreatedDate
                                </div>
                                <div class="mb-3" style="display:none">
                                    <label for="status" class="form-label">Status</label>
                                    @orchidlist.Status
                                </div>

                                <div class="mb-3" style="display:none">
                                    <label for="userId" class="form-label">UserId</label>
                                    <input type="hidden" class="form-control" id="userId" asp-for="@orchidlist.UserId" />

                                </div>

                                <div class="mb-3" style="display:none">
                                    <label for="auctionid" class="form-label">AuctionId</label>
                                    <input type="hidden" class="form-control" id="auctionid" asp-for="@orchidlist.AuctionId" />
                                </div>

                                <div class="mb-3">
                                    <label for="auctionName" class="form-label">Auction Name: </label>
                                    @orchidlist.AuctionName
                                </div>
                                <div class="mb-3">
                                    <label for="deposit" class="form-label">Deposit: </label>
                                    @orchidlist.Deposit
                                </div>
                                <div class="mb-3">
                                    <label for="startingBid" class="form-label">Starting Bid: </label>
                                    @orchidlist.StartingBid
                                </div>
                                <div class="mb-3">
                                    <label for="openDate" class="form-label">OpenDate: </label>
                                    @orchidlist.OpenDate
                                </div>
                                <div class="mb-3">
                                    <label for="closeDate" class="form-label">CloseDate: </label>
                                    @orchidlist.CloseDate
                                </div>

                                <div class="mb-3 d-flex justify-content-between">
                                    <button class="btn btn-danger" type="submit">Auction</button>
                                </div>

                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>
                    <p>no list informations </p>
                </div>
            }
            <style>
                .content {
                display: none;
                }

                #body {
                width: 80%;
                margin: auto;
                padding: 20px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                background-color: #f8f9fa;
                }

                #body .form-label {
                font-weight: bold;
                color: #343a40;
                }

                #body .mb-3 {
                margin-bottom: 1rem !important;
                }

                #body a {
                color: #007bff;
                text-decoration: none;
                }

                #body a:hover {
                color: #0056b3;
                text-decoration: underline;
                }

                #body img {
                max-width: 100%;
                height: auto;
                }

                #body hr {
                border: none;
                border-top: 2px solid #000;
                margin: 10px 0;
                }
            </style>
        }
        else
        {
            <h1>Access Denied</h1>
        }
    }
    else
    {
        <h1>You haven't logined</h1>
    }
}