@page
@model OrchidTradingManagement.Pages.Orchid.CartModel
@{
}

<div>
    <div>
        <h1>Cart Information</h1>
    </div>
</div>

<div>
    @if (Model.carlist.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Orchid</td>
                    <td>Quantity</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.carlist.Count(); i++)
                {
                    <tr>
                        <td>@Model.carlist[i].Product.OrchidName</td>
                        <td>@Model.carlist[i].quantity</td>

                        <td>
                            <form method="post">
                                <input hidden name="del" value="@i" />
                                <button>Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <form method="post">
            <button>Order</button>
        </form>
    }
    else
    {
        <h3>Cart empty</h3>
    }
</div>