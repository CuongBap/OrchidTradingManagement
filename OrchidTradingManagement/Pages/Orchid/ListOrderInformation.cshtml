@page
@model OrchidTradingManagement.Pages.Orchid.ListOrderInformationModel
@{
}

<div>
    <div>
        <h1>List Order </h1>
    </div>

</div>

<p>
    <a asp-page="EditStatusOrder">Create</a>
</p>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>OrderID</th>
                <th>OrderDate</th>
                <th>SellerId</th>
                <th>Total</th>
                <th>status</th>


            </tr>

        </thead>
        <tbody>
            @foreach (var orderItem in Model.Orders)
            {
                <tr>
                    <td>@orderItem.OrderId</td>
                    <td>@orderItem.OrderDate</td>
                    <td>@orderItem.SellerId</td>
                    <td>@orderItem.Total</td>
                    <td>@orderItem.Status</td>


                </tr>
            }

        </tbody>
    </table>
</div>