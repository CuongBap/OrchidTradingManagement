@page
@model OrchidTradingManagement.Pages.Orchid.MyAuctionOrchidModel
@{
}

@{
    String jsonString = HttpContext.Session.GetString("userId");
    if (!string.IsNullOrEmpty(jsonString))
    {
        if (!jsonString.Equals("e7c115d3-a70a-4a16-b891-c45bd0425a00"))
        {
            <div>
                <div>
                    <h1>
                        My Auction Orchid Information
                    </h1>
                </div>
            </div>
            var id = HttpContext.Session.GetString("userId");

            if (Model.Auctions != null && Model.Auctions.Any())
            {
                <div class="container">
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Images</td>
                                <td>Title</td>
                                <td>Status</td>
                                <td> </td>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orchid in Model.Auctions)
                            {
                                <tr>
                                    <td>
                                        <img src="@orchid.Image" style="width:100px; height:100px" />
                                    </td>
                                    <td>@orchid.Title</td>
                                    <td>@orchid.Status</td>
                                    <td><a href="/orchid/MyEditAuctionOrchid/@orchid.InforId">View</a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            }
            else
            {
                <div>
                    <p>No Orchid Information Were Found!.</p>
                </div>
            }
            <style>
                .button {
                    display: inline-block;
                    padding: 10px 20px;
                    font-size: 20px;
                    text-align: center;
                    text-decoration: none;
                    color: #fff;
                    background-color: white;
                    border-radius: 5px;
                    border: none;
                    transition: all 0.5s;
                }

                    .button:hover {
                        background-color: silver;
                    }


                .content {
                    display: none;
                }

                #body {
                    width: 80%;
                    margin: auto;
                    padding: 20px;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    background-color: #f8f9fa;
                }

                    #body .form-label {
                        font-weight: bold;
                        color: #343a40;
                    }

                    #body .mb-3 {
                        margin-bottom: 1rem !important;
                    }

                    #body a {
                        color: #007bff;
                        text-decoration: none;
                    }

                        #body a:hover {
                            color: #0056b3;
                            text-decoration: underline;
                        }

                    #body img {
                        max-width: 100%;
                        height: auto;
                    }

                    #body hr {
                        border: none;
                        border-top: 2px solid #000;
                        margin: 10px 0;
                    }

            </style>

            <script>
                function toggleContent(id) {
                    var content = document.getElementById(id);

                    if (content.style.display == "none") {
                        content.style.display = "block";

                    } else {
                        content.style.display = "none";
                    }
                }
            </script>
        }
    }
}