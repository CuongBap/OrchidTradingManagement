@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OrchidTradingManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OrchidTradingManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">OrchidTradingManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false" id="navbardropdownpost">
                                List Information
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbardropdownpost">

                                <li>
                                    <a class="dropdown-item" href="/Orchid/AddSellInformation">Add Sell Information</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Orchid/AddAuctionInformation">Add Auction Information</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Orchid/SellListInformation">View Sell ListInformation</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Orchid/SellOrchidInformation">View Sell Orchid Information</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false" id="navbardropdownpost">
                                My Orchid Information
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbardropdownpost">
                                <li>
                                    <a class="dropdown-item" href="">My Aution Orchid</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Orchid/MySellOrchidInformation">My Sell Orchid</a>
                                </li>
                            </ul>
                            <!--end-->
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false" id="navbardropdownpost">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbardropdownpost">
                                    <li>
                                        <a class="dropdown-item" href="/admin/accesspostlist">AccessList</a>
                                    </li>
                                </ul>
                                <!--end-->
                            </li>
                        }
                    </ul>
                    
                    @if (HttpContextAccessor.HttpContext.Session.GetString("userId") == null)
                    {
                        <div>
                            <a href="/login" class="btn bg-light text-dark me-3">Login</a>
                            <a href="/register" class="btn bg-light text-dark me-3">Register</a>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a asp-page="/Login" asp-page-handler="Logout" class="btn btn-dark">LogOut</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OrchidTradingManagement - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>